<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="445dp"
    android:layout_height="445dp"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
android:background="@drawable/bbd"
    android:gravity="center"
    tools:context=".MainActivity">

    <com.haneet.wheelwidget.view.LTSpinningWheelView
        android:id="@+id/wheel"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_weight="1"

        app:wheel_arrow_color="@android:color/transparent"
        app:wheel_arrow_height="35dp"
        app:wheel_arrow_width="20dp"
        app:wheel_stroke_color="@android:color/transparent"
        app:wheel_stroke_width="1dp" />

</RelativeLayout>