<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="445sp"
    android:layout_height="445sp"
    android:layout_gravity="center"
    android:background="@drawable/disc">

    <ImageView
        android:id="@+id/antithefttxt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="255dp"
        android:layout_marginRight="255dp"
        android:layout_marginBottom="93dp"
        android:src="@mipmap/antithefttxt"
        app:layout_constraintBottom_toTopOf="@+id/enginecuttxt"
        app:layout_constraintEnd_toStartOf="@+id/zonetxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/zonetxt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginBottom="100dp"
        android:src="@mipmap/assigntxt"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/antithefttxt"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="51dp"
        android:src="@mipmap/sharetxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/enginecuttxt"
        app:layout_constraintTop_toBottomOf="@+id/zonetxt" />

    <ImageView
        android:id="@+id/enginecuttxt"
        android:layout_width="90dp"
        android:layout_height="77dp"
        android:layout_marginStart="74dp"
        android:layout_marginLeft="74dp"
        android:layout_marginEnd="101dp"
        android:layout_marginRight="101dp"
        android:layout_marginBottom="51dp"
        android:src="@mipmap/enginetxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/antithefttxt" />

    <ImageView
        android:id="@+id/directiontxt"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="251dp"
        android:src="@mipmap/directiontxt"
        app:layout_constraintBottom_toTopOf="@+id/enginecuttxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/direction"
        android:layout_width="44dp"
        android:layout_height="0dp"
        android:layout_marginTop="74dp"
        android:layout_marginBottom="7dp"
        android:src="@mipmap/direction"
        app:layout_constraintBottom_toTopOf="@+id/wheel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/share"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="123dp"
        android:layout_marginRight="123dp"
        android:layout_marginBottom="103dp"
        android:src="@mipmap/share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/enginecut"
        app:layout_constraintTop_toBottomOf="@+id/zone" />

    <ImageView
        android:id="@+id/enginecut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="126dp"
        android:layout_marginLeft="126dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="103dp"
        android:src="@mipmap/enginecut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/share"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/antitheft" />

    <ImageView
        android:id="@+id/zone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="159dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginBottom="87dp"
        android:src="@mipmap/zone"
        app:layout_constraintBottom_toTopOf="@+id/share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/wheel"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/antitheft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="159dp"
        android:layout_marginBottom="87dp"
        android:src="@mipmap/antitheft"
        app:layout_constraintBottom_toTopOf="@+id/enginecut"
        app:layout_constraintEnd_toStartOf="@+id/wheel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.haneet.wheelwidget.view.LTSpinningWheelView
        android:id="@+id/wheel"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_gravity="center"
        android:layout_marginBottom="138dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/zone"
        app:layout_constraintStart_toEndOf="@+id/antitheft"
        app:layout_constraintTop_toBottomOf="@+id/direction"
        app:wheel_arrow_color="@android:color/transparent"
        app:wheel_arrow_height="35dp"
        app:wheel_arrow_width="20dp"
        app:wheel_stroke_color="@android:color/transparent"
        app:wheel_stroke_width="1dp" />

</android.support.constraint.ConstraintLayout>